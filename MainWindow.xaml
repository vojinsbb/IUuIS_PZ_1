<Window 
    x:Class="CMS_gigabyte_graphic_cards.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CMS_gigabyte_graphic_cards"
    xmlns:notifications="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
    mc:Ignorable="d"
    Title="Login"
    WindowStartupLocation="CenterScreen"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    AllowsTransparency="True"
    Background="Transparent"
    SizeToContent="WidthAndHeight"
    WindowStyle="None">

    <!-- Predmetni zadatak 1 iz predmeta IUuIS za 2024/25-->
    <!-- Autor: Vojin Jovanovic PR82/2022-->
    <!-- Tema:  Gigabye grafike karte-->

    <Window.Resources>

    </Window.Resources>

    <Canvas 
        Height="500" 
        Width="500">
        <Canvas.Resources>
            <DropShadowEffect
                x:Key="MouseOverDropShadowEffect"
                Direction="320"
                Opacity="80"
                ShadowDepth="10"
                Color="Black"/>
        </Canvas.Resources>
        <notifications:NotificationArea
            x:Name="WindowsNotificationArea"
            Panel.ZIndex="1000"
            MaxItems="3"
            Position="TopRight"/>
        <Path
            Stroke="Black" 
            Fill="LightGray"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure 
                        StartPoint="50,0" IsClosed="True">
                        <ArcSegment Point="0,50" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="0,450"/>
                        <ArcSegment Point="50,500" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="450,500"/>
                        <ArcSegment Point="500,450" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="500,50"/>
                        <ArcSegment Point="450,0" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="50,0"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <StackPanel Height="450" Width="500">
            <TextBlock
                Text="Hello, welcome!"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                FontWeight="Bold"
                FontFamily="Calibri"
                Margin="0 25 0 5"/>
            <TextBlock
                Text="Please log in to enter this site."
                FontSize="23"
                FontWeight="DemiBold"
                FontFamily="Calibri"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0 5 0 0"/>
            <Label
                x:Name="UsernameLabel"
                Content="Username:"
                Width="350"
                FontSize="20"
                FontFamily="Calibri"
                FontWeight="DemiBold"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="20 10 0 0"
                />
            <StackPanel>
                <TextBox
                    x:Name="UsernameTextBox"
                    Width="350"
                    FontSize="20"
                    FontFamily="Calibri"
                    ToolTip="Input username"
                    Padding="5"
                    HorizontalAlignment="Left"
                    Margin="22 0 0 0"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"/>
                <Label
                    x:Name="UsernameErrorLabel"
                    Content=""
                    FontSize="15"
                    FontFamily="Calibri"
                    Width="350"
                    Foreground="Red"
                    HorizontalAlignment="Left"
                    Margin="22 0 0 0"/>
            </StackPanel>

            <Label
                x:Name="PasswordLabel"
                Content="Password:"
                FontSize="20"
                FontWeight="DemiBold"
                FontFamily="Calibri"
                Margin="20 0 0 0"/>
            <StackPanel>
                <PasswordBox
                    x:Name="PasswordTextBox"
                    ToolTip="Input password"
                    Width="350"
                    FontSize="20"
                    FontFamily="Calibri"
                    Padding="5"
                    HorizontalAlignment="Left"
                    Margin="22 0 0 0"
                    BorderBrush="Black"
                    BorderThickness="1"/>
                <Label
                    x:Name="PasswordErrorLabel"
                    FontSize="15"
                    Content=""
                    FontFamily="Calibri"
                    Foreground="Red"
                    Width="350"
                    HorizontalAlignment="Left"
                    Margin="22 0 0 0"/>
            </StackPanel>

            <StackPanel 
                Orientation="Horizontal"
                Margin="0 10 0 0">
                <Button
                    x:Name="LoginButton"
                    ToolTip="Press"
                    Width="170"
                    Height="40"
                    Content="LOG IN"
                    FontFamily="Calibri"
                    FontWeight="Bold"
                    Background="MediumSeaGreen"
                    HorizontalAlignment="Left"
                    Margin="22 30 0 0"
                    Cursor="Cross"
                    Click="LoginButton_Click"/>
                <Button
                    x:Name="ExitButton"
                    Content="EXIT"
                    ToolTip="Close"
                    Click="ExitButton_Click"
                    Height="40"
                    Width="170"
                    Background="IndianRed"
                    FontFamily="Calibri"
                    FontWeight="Bold"
                    HorizontalAlignment="Right"
                    Margin="10 30 0 0"/>
            </StackPanel>
        </StackPanel>
    </Canvas>
</Window>

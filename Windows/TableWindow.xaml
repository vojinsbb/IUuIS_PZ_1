<Window x:Class="CMS_gigabyte_graphic_cards.Windows.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS_gigabyte_graphic_cards.Windows"
        xmlns:fa5 ="http://schemas.fontawesome.com/icons/"
        xmlns:notifications="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
        mc:Ignorable="d"
        Title="AdminWindow" Height="550" Width="1000"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Canvas>
        <Path
            Stroke="Black"
            Fill="DarkGray"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="50,0" IsClosed="True">
                        <ArcSegment Point="0,50" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="0,350"/>
                        <ArcSegment Point="50,400" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="350,400"/>
                        <ArcSegment Point="450,500" Size="100,100" SweepDirection="Clockwise"/>
                        <LineSegment Point="950,500"/>
                        <ArcSegment Point="1000,450" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="1000,50"/>
                        <ArcSegment Point="950,0" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="500,0"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <!-- spoljasnji krug -->
        <Ellipse Canvas.Left="50"
             Canvas.Top="50"
             Width="300"
             Height="300"
             Fill="Black"
             Stroke="Black"
             StrokeThickness="2"/>

        <!-- sredisnji krug -->
        <Ellipse Canvas.Left="170"
             Canvas.Top="170"
             Width="60"
             Height="60"
             Fill="gray"/>

        <!-- lopatice -->
        <Canvas RenderTransformOrigin="0.5,0.5"
            Canvas.Left="200"
            Canvas.Top="200">

            <!-- originalna lopatica -->
            <Path Fill="DarkSlateGray" Stroke="Black" StrokeThickness="1">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,0" IsClosed="True">
                            <!-- Bezier krivina do 130 duzine -->
                            <BezierSegment Point1="110,-30" Point2="160,60" Point3="0,130"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <!-- druga lopatica(rotacija 120 stepeni) -->
            <Path Fill="DarkSlateGray" Stroke="Black" StrokeThickness="1"
              RenderTransformOrigin="0,0">
                <Path.RenderTransform>
                    <RotateTransform Angle="120"/>
                </Path.RenderTransform>
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,0" IsClosed="True">
                            <BezierSegment Point1="110,-30" Point2="160,60" Point3="0,130"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <!-- treca lopatica(rotacija 240 stepeni) -->
            <Path Fill="DarkSlateGray" Stroke="Black" StrokeThickness="1"
              RenderTransformOrigin="0,0">
                <Path.RenderTransform>
                    <RotateTransform Angle="240"/>
                </Path.RenderTransform>
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,0" IsClosed="True">
                            <BezierSegment Point1="110,-30" Point2="160,60" Point3="0,130"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>

        <StackPanel Width="1000" Height="500">
            <StackPanel Width="450" Height="50" Margin="405 0 0 0" Orientation="Horizontal">
                <CheckBox
                    x:Name="SelectAllCheckBox"
                    Margin="0 0 0 0"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Content="Select All"
                    FontFamily="Calibri"
                    FontSize="16"
                    FontWeight="Bold"
                    IsChecked="{Binding IsAllSelected, Mode=TwoWay}"
                    ToolTip="Select or deselect all items"/>
            </StackPanel>
            <StackPanel Margin="475 0 25 0" Height="450" Width="500" Orientation="Vertical">
                <Grid Width="500" Height="450">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DataGrid
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        BorderBrush="Black"
                        BorderThickness="2"
                        ItemsSource="{Binding GraphicCards}"
                        x:Name="GraphicCardDataGrid"
                        AutoGenerateColumns="False"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        CanUserAddRows="False"
                        CanUserResizeColumns="False"
                        CanUserResizeRows="False"
                        CanUserReorderColumns="False">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn 
                                x:Name="SelectColumn" 
                                Header="Select" 
                                Binding="{Binding  IsSelected, Mode=TwoWay}"/>
                            <DataGridHyperlinkColumn 
                                Header="Name" 
                                Binding="{Binding  RtfFilePath}" 
                                IsReadOnly="True">
                                <DataGridHyperlinkColumn.ElementStyle>
                                    <Style 
                                        TargetType="TextBlock">
                                        <EventSetter 
                                            Event="Hyperlink.Click"
                                            Handler="HyperLink_Click"/>
                                    </Style>
                                </DataGridHyperlinkColumn.ElementStyle>
                            </DataGridHyperlinkColumn>

                            <DataGridTemplateColumn 
                                Header="Image">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image 
                                            Source="{Binding ImagePath}" 
                                            Width="50" 
                                            Height="50"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn 
                                Header="Date Added" 
                                Binding="{Binding DateAdded}" 
                                SortMemberPath="DateAdded" 
                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button
                        x:Name="AddButton"
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Width="150"
                        Height="50"
                        ToolTip="Press to add element"
                        Click="AddButton_Click"
                        Cursor="Hand"
                        FontFamily="Calibri"
                        FontSize="18"
                        FontWeight="Bold"
                        Background="MediumAquamarine"
                        BorderBrush="MediumAquamarine">
                        <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                            <fa5:SvgAwesome
                                Height="18"
                                Width="18"
                                Margin="0,0,5,0"
                                Foreground="Black"
                                Icon="Solid_Plus"/>        
                            <TextBlock 
                                VerticalAlignment="Center" 
                                Foreground="Black" 
                                Text="Add"/>
                        </StackPanel>
                    </Button>

                    <Button
                        x:Name="DeleteButton"
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Height="50"
                        Width="150"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Calibri"
                        FontWeight="Bold"
                        FontSize="18"
                        ToolTip="Press to delete"
                        Background="MediumPurple"
                        BorderBrush="Purple"
                        Cursor="Hand"
                        Click="DeleteButton_Click">
                        <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                            <fa5:SvgAwesome
                                Height="18"
                                Width="18"
                                Margin="0,0,5,0"
                                Foreground="Black"
                                Icon="Solid_Trash" />
                            <TextBlock 
                                VerticalAlignment="Center" 
                                Foreground="Black" 
                                Text="Delete"/>
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="LogOutButton"
                        Click="LogOutButton_Click"
                        ToolTip="Press to log out"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Height="50"
                        Width="150"
                        Background="IndianRed"
                        BorderBrush="Red"
                        FontFamily="Calibri"
                        FontWeight="Bold"
                        FontSize="18"
                        Cursor="Hand">
                        <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                            <fa5:SvgAwesome
                                Height="18"
                                Width="18"
                                Margin="0,0,5,0"
                                Foreground="Black"
                                Icon="Solid_Compass" />
                            <TextBlock 
                                VerticalAlignment="Center" 
                                Foreground="Black" 
                                Text="Log out"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Canvas>
</Window>

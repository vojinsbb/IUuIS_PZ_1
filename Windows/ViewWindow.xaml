<Window x:Class="CMS_gigabyte_graphic_card.Windows.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS_gigabyte_graphic_card.Windows"
        xmlns:fa5 ="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="ViewWindow" Height="550" Width="1000"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen">
    <Canvas>
        <Path
            Stroke="Black"
            Fill="DarkGray"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="50,0" IsClosed="True">
                        <ArcSegment Point="0,50" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="0,350"/>
                        <ArcSegment Point="50,400" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="350,400"/>
                        <ArcSegment Point="450,500" Size="100,100" SweepDirection="Clockwise"/>
                        <LineSegment Point="950,500"/>
                        <ArcSegment Point="1000,450" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="1000,50"/>
                        <ArcSegment Point="950,0" Size="50,50" SweepDirection="Counterclockwise"/>
                        <LineSegment Point="500,0"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <!-- spoljasnji krug -->
        <Ellipse 
            Canvas.Left="50"
            Canvas.Top="50"
            Width="300"
            Height="300"
            Fill="Black"
            Stroke="Black"
            StrokeThickness="2"/>

        <!-- sredisnji krug -->
        <Ellipse 
            Canvas.Left="170"
            Canvas.Top="170"
            Width="60"
            Height="60"
            Fill="gray"/>

        <!-- lopatice -->
        <Canvas 
            RenderTransformOrigin="0.5,0.5"
            Canvas.Left="200"
            Canvas.Top="200">

            <!-- originalna lopatica -->
            <Path 
                Fill="DarkSlateGray" 
                Stroke="Black" 
                StrokeThickness="1">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,0" IsClosed="True">
                            <!-- Bezier krivina do 130 duzine -->
                            <BezierSegment Point1="110,-30" Point2="160,60" Point3="0,130"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <!-- druga lopatica(rotacija 120 stepeni) -->
            <Path 
                Fill="DarkSlateGray" 
                Stroke="Black" 
                StrokeThickness="1"
                RenderTransformOrigin="0,0">
                <Path.RenderTransform>
                    <RotateTransform Angle="120"/>
                </Path.RenderTransform>
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,0" IsClosed="True">
                            <BezierSegment Point1="110,-30" Point2="160,60" Point3="0,130"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <!-- treca lopatica(rotacija 240 stepeni) -->
            <Path 
                Fill="DarkSlateGray" 
                Stroke="Black" 
                StrokeThickness="1"
                RenderTransformOrigin="0,0">
                <Path.RenderTransform>
                    <RotateTransform Angle="240"/>
                </Path.RenderTransform>
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,0" IsClosed="True">
                            <BezierSegment Point1="110,-30" Point2="160,60" Point3="0,130"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>

        <StackPanel  Height="500" Width="1000">
            <StackPanel 
                Margin="475 10 25 0" 
                Height="475" 
                Width="500" 
                Orientation="Vertical">
                <Grid Height="475" Width="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.RowSpan="2"
                        Orientation="Vertical">
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontWeight="Bold"
                            FontSize="25"
                            FontFamily="Calibri"
                            Name="nameLabel"
                            Content=""
                            Margin="0 5 0 5"/>
                        <RichTextBox
                            x:Name="richTextBoxView"
                            Width="450"
                            IsReadOnly="True"
                            BorderThickness="2"
                            BorderBrush="Black"
                            Padding="2"
                            Height="200"/>
                        <StackPanel
                            Orientation="Horizontal"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="20 5 0 0">
                            <Label
                            Name="activeUsersLabel"
                            Content="Active users:"
                            FontFamily="Calibri"
                            FontSize="18"
                            FontWeight="Bold"/>
                            <Label
                                x:Name="activeUsersNumberLabel"
                                Margin="10 0 0 0"
                                FontFamily="Calibri"
                                FontWeight="Bold"
                                FontSize="18"
                                Foreground="DarkBlue"
                                Content=""/>
                        </StackPanel>

                        <StackPanel
                            Orientation="Horizontal"
                            Margin="20 5 0 0">
                            <Label
                                Name="dateAddedLabel"
                                FontSize="18"
                                FontWeight="Bold"
                                FontFamily="Calibri"
                                Content="Date added:  "/>
                            <Label
                                x:Name="dateAddedNumberLabel"
                                Margin="5 0 0 0"
                                Content=""
                                FontFamily="Calibri"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="DarkBlue"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        Orientation="Vertical"
                        Grid.Row="3"
                        Grid.Column="0">
                        <Border
                            x:Name="borderForImage"
                            BorderBrush="Black"
                            BorderThickness="2"
                            Width="100"
                            Height="100"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0 10 0 0">
                            <Image
                                x:Name="imagePreview"
                                Stretch="Fill">
                            </Image>
                        </Border>

                        <Label
                            FontSize="12"
                            Margin="0 0 0 0"
                            FontFamily="Calibri"
                            FontWeight="Bold"
                            Content=""
                            MaxWidth="150"
                            HorizontalAlignment="Center"
                            x:Name="selectedImageNameLabel"/>
                    </StackPanel>

                    <Button
                        x:Name="backButton"
                        Click="backButton_Click"
                        Grid.Row="3"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="50"
                        Width="150"
                        Background="IndianRed"
                        BorderBrush="Red"
                        BorderThickness="2"
                        FontSize="18"
                        FontFamily="Calibri"
                        FontWeight="Bold"
                        ToolTip="Press to go back"
                        Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <fa5:SvgAwesome
                                VerticalAlignment="Center"
                                Height="18"
                                Width="18"
                                Foreground="Black"
                                Icon="Solid_Backward"/>
                            <TextBlock
                                Text="Back"
                                Margin="5 0 0 2"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Canvas>
</Window>
